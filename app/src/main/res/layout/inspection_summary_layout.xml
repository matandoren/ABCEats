<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:tag="item main container"
    android:layout_margin="4dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/card_inspection_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="January 1, 1970"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/card_inspection_result"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/card_inspection_result"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Violations Issued"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/card_inspection_date"
            app:layout_constraintEnd_toStartOf="@+id/card_inspection_points"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/card_inspection_points"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="11"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/card_inspection_result"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>